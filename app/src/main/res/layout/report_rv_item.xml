<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/report_rv_item_root"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="17dp"
    android:background="@drawable/report_rv_bg_img">

    <ImageView
        android:id="@+id/report_rv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/report_rv_date_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/report_rv_date_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023-01-02"
        android:textColor="#666666"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/report_rv_icon"
        app:layout_constraintEnd_toEndOf="@id/report_rv_icon"
        app:layout_constraintStart_toStartOf="@id/report_rv_icon"
        app:layout_constraintTop_toTopOf="@id/report_rv_icon" />

    <TextView
        android:id="@+id/report_rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="HTP 그림 분석 / 대화 감성분석 결과"
        android:textColor="#666666"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/report_rv_date_info_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>